{{!-- Make a header that is also a button that opens up an expand
 --}}
<header class="container-fluid">
  <button class="btn on" id="headerBtn" type="button" data-toggle="collapse" data-target="#mainContainer" aria-expanded="false"
    aria-controls="collapseExample">
    Eat - Da - Burger
  </button>
</header>


{{!-- main container contains input and a button. --}}
<main class="container-fluid collapse show" id="mainContainer">
  <div class="input-group" id="burgerNameTakerGroup">
    <input type="text" class="form-control" id="burgerInput" placeholder="Enter Burger Name"
      aria-label="Enter Burger Name" aria-describedby="burger-addon">
  </div>
  <button class="input-group-button" id="createBtn">Add Burger</button>
</main>


{{!-- consumeContainer contains the sandwiches available for consumption --}}
{{!-- and the list of consumed sandwiches --}}
<div class="container-fluid" id="consumeContainer">
  <div class="row" id="burgersDevouredTitles">
    <div class="col burgersDevouredTitle">
      BURGERS
    </div>
    <div class="col burgersDevouredTitle">
      DEVOURED
    </div>
  </div>

  <div class="row">
    <div class="col" id="unconsumedCol">
      {{#each sandwiches}}
      {{#if consumed}}
      {{> sandwiches/sandwich-block consumed=false}}
      {{/if}}
      {{/each}}
    </div>
    <div class="col" id="consumedCol">
      {{#each sandwiches}}
      {{#unless consumed}}
      {{>sandwiches/sandwich-block consumed=true}}
      {{/unless}}
      {{/each}}
    </div>
  </div>
</div>
