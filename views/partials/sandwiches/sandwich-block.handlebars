<div class="row burgerDisplay mt-2">
  <div class="col-8">
    <i class="fas fa-hamburger mr-4"></i>{{name}}
  </div>
  <div class="col-4">
    {{#unless consumed}}
    <button class="eat" data-id="{{id}}" data-eaten="{{consumed}}">
      Devour
    </button>
    {{else}}
    <button class="delBtn" data-id="{{this.id}}"><i class="far fa-trash-alt"></i></button>

    {{/unless}}
  </div>
</div>