{{#unless devoured}}
<div class="row burgerDisplay mb-1 mt-1">
  <div class="col-9">
    <i class="fas fa-hamburger mr-1"></i>{{name}}
  </div>
  <div class="col-3">
    <button class="eat" data-id="{{id}}" data-eaten="{{devoured}}">
      Devour
    </button>
  </div>
</div>
{{else}}
<div class="row burgerDisplay mb-1 mt-1">
  <div class="col-9">
    <i class="fas fa-hamburger mr-1"></i>{{name}}
  </div>
  <div class="col-3">
    <button class="delBtn" data-id="{{this.id}}"><i class="far fa-trash-alt"></i></button>
  </div>
</div>
{{/unless}}